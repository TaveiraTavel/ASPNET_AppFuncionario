@model AppTurmaB.Models.Funcionario

@{
    ViewBag.Title = "Create";
}

<h2>Cadastro de Funcionarios</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(model => Model.FuncID)
        @Html.EditorFor(model => Model.FuncID)
